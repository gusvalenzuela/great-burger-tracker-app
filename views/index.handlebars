<div class="jumbotron text-center">
  <p class="display-2 brand-name">Great Burger</p>

</div>
<div class="container">
  <div class="row">
    yes
  </div>
  <div class="row">
    <div class="col-6">
      <h2>Burgers to eat:</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>






<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
